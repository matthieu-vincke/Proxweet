
extends layout

block content
  div.navbar.navbar-fixed-top
    div.navbar-inner
      div.container-fluid
        ul#global-nav.nav.pull-left
          a(href='#').brand ProxyWeet
        button#btn-parameter.btn.btn-primary
          i.icon-cog.icon-white
          | Parameter
        button#btn-logout.btn.btn-primary
          i.icon-lock.icon-white
          | Sign Out
  #main-form-container
    #main-form.form-horizontal.well.span6
      input#proxweet.text-center.input-block-level(type="text",placeholder="text",name="proxweet")
      h2.align-center Local Tweets
      table.table.table-striped.table-bordered.table-condensed#events

  include modals/alert
  include modals/confirm

block scripts
  script(src='/vendor/moment.min.js')
  script(src='/vendor/jquery.min.js')
  script(src='/vendor/jquery.form.js')
  script(src='/vendor/bootstrap-modal.js')
  script(src='/vendor/bootstrap-transition.js')
  script(src='/js/views/home.js')
  script(src='/js/controllers/homeController.js')
  script(src='/js/form-validators/accountValidator.js')